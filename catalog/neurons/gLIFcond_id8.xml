<?xml version='1.0' encoding='UTF-8'?>
<nineml xmlns="http://nineml.org/9ML/0.1">
  <component name="gLIFid8_cond">
    <parameter name="q"/>
    <parameter name="Ee"/>
    <parameter name="Ei"/>
    <parameter name="tau_a"/>
    <analog-port symbol="gi" mode="send"/>
    <analog-port symbol="Isyn" expression="ge(Ee-V) + gi(Ei-V)" mode="send"/>
    <analog-port symbol="ge" mode="send"/>
    <analog-port symbol="t" mode="send"/>
    <analog-port symbol="V" mode="recv"/>
    <analog-port symbol="ge_a" mode="send"/>
    <analog-port symbol="gi_a" mode="send"/>
    <regime name="Regime1">
      <ode independent_variable="t" name="ODE1" dependent_variable="ge_a">
        <math-inline>-ge_a/tau_a</math-inline>
      </ode>
      <ode independent_variable="t" name="ODE2" dependent_variable="ge">
        <math-inline>ge_a - ge/tau_a</math-inline>
      </ode>
      <ode independent_variable="t" name="ODE4" dependent_variable="gi">
        <math-inline>gi_a - gi/tau_a</math-inline>
      </ode>
      <ode independent_variable="t" name="ODE3" dependent_variable="gi_a">
        <math-inline>-gi_a/tau_a</math-inline>
      </ode>
    </regime>
    <transition to="Regime1" from="Regime1" name="Transition1">
      <condition-on-event-port>
        <event-port symbol="spike_input" mode="recv"/>
      </condition-on-event-port>
      <inplace to="ge" name="InplaceAdd0" op="+=">
        <math-inline>q</math-inline>
      </inplace>
    </transition>
  </component>
</nineml>
